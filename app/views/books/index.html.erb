<% if flash[:notice] %>
<%= flash[:notice] %>
<% end %>

<h2>Books</h2>

<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Body</th>
			<th></th>
		</tr>
	</thead>

	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td><%= book.title %></td>
			<td><%= book.body %></td>
			<td>
				<%= link_to "show",book_path(book) %>
				<%= link_to "edit",edit_book_path(book) %>
				<%= link_to "destroy","books/#{book.id}",method: :delete,data: {confirm: 'Are you sure?'} %>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>

<h3>New book</h3>
<%= form_for(@book) do |f| %>

<h4>Title</h4>
<%= f.text_field :title %>
<h4>body</h4>
<%= f.text_area :body %><br>
<%= f.submit 'Create Book' %>

<% end %>